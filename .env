# ========== Server Settings ==========
PORT=5000
NODE_ENV=development
APP_NAME=LabLink-Backend

# ========== Supabase Service ==========
SUPABASE_URL=https://<your-supabase-project>.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ========== Database (If Extended) ==========
DATABASE_URL=postgresql://username:password@host:5432/lablink_db

# ========== Auth & Encryption ==========
JWT_SECRET=supersecurejwtsecretkey
JWT_EXPIRY=1h
COOKIE_SECRET=random-cookie-salt

# ========== Email & Notifications ==========
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.mailgun.org
EMAIL_PORT=587
EMAIL_USER=postmaster@yourdomain.com
EMAIL_PASS=yourpassword

# ========== Logging ==========
LOG_LEVEL=debug
